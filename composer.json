{
    "name": "wikimedia/utfnormal",
    "description": "",
    "license": "GPL-2.0+",
    "homepage": "https://www.mediawiki.org/wiki/utfnormal",
    "authors": [
        {
            "name": "Brion Vibber",
            "email": "bvibber@wikimedia.org"
        }
    ],
    "autoload": {
        "classmap": ["src/"]
    },
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "0.8.*",
        "phpunit/phpunit": "4.4.*",
        "squizlabs/php_codesniffer": "2.1.*",
        "mediawiki/mediawiki-codesniffer": "0.1.0",
        "ext-mbstring": "*"
    },
    "scripts": {
        "generate": "php scripts/generate.php",
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit $PHPUNIT_ARGS",
            "php scripts/benchmark.php"
        ],
        "phpcs": "phpcs $PHPCS_ARGS --standard=vendor/mediawiki/mediawiki-codesniffer/MediaWiki --ignore=vendor -v ."
    },
    "config": {
        "optimize-autoloader": true
    }
}
